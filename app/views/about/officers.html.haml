:javascript
  $(document).ready(function() {
    $('.execs').last().css('padding-right', '0px');
    $('.activities').last().css('padding-right', '0px');
    $('.hope').last().css('padding-right', '0px');
    $('.indrel').last().css('padding-right', '0px');
    $('.io').last().css('padding-right', '0px');
    $('.prodev').last().css('padding-right', '0px');
    $('.techops').last().css('padding-right', '0px');
    $('.website').last().css('padding-right', '0px');
  });
  
%h1 Current Officers
%div#about_nav
  - %w(information officers advisor contact).each do |name|
    = link_to name.upcase, name, :id => "about_#{name}", :class => "about_nav_link"

%h2 Executives
%hr
%br
- @execs.each do |officer|
  .officer.execs
    - pn = Pathname.new("#{Dir.getwd}/app/assets/images/officer_pictures/2013/#{officer[0].downcase.gsub(' ', '_')}.jpg")
    - if pn.exist?
      = image_tag(pn.to_s, :class => "officer_pic")
    - else
      = image_tag("officer_pictures/2013/default.jpg", :class => "officer_pic")
    %div(class="title" style="opacity:0")
      = officer[0]
      %br
      = officer[1]
%br
%br

