%h1 Current Officers
%div#about_nav
	- %w(information officers advisor contact).each do |name|
		= link_to name.upcase, name, :id => "about_#{name}", :class => "about_nav_link"

%h2 Executives
%hr
%br
- @execs.each do |filename, officer|
	.officer.execs
		=image_tag("officer_pictures/2013/#{filename}", :class => "officer_pic")
		%div(class="title" style="opacity:0") 
			= officer[0]
			%br
			= officer[1]
%br 
%br 
%h2{:style => "clear:both;"} Activities
%hr
%br
- @activities.each do |filename, officer|
	.officer.activities
		=image_tag("officer_pictures/2013/#{filename}", :class => "officer_pic")
		%div(class="title" style="opacity:0") 
			= officer
			- if @activities.index(officer) == 0
				%br
				Director
