= form_for @p,  :html => { :multipart => true } do |f|
  - if @p.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
        - for message in @p.errors.full_messages
          %li= message
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :content
    %br/
    = f.text_area :content
  %p
    = f.label	:photo
    = f.file_field	:photo
  %p.button= f.submit
