#fb-root
:javascript
  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/fb_LT/all.js#xfbml=1";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
  
#sidebar
  %h3#subscribe_form
    = link_to "Subscribe To Our Mailing List!", statics_subscribe_path
  .fb-like{"data-href" => "http://ieee.berkeley.edu/", "data-layout" => "button_count", "data-send" => "true", "data-show-faces" => "false", "data-width" => "235"}
  %h1 Photos
  = link_to "View All Albums", photos_url, :id => "all_photos"
  %div{:id => "photo_wrapper", :class => "clearfix"}
    - featured_albums.each do |a|
      = link_to image_tag(a[:thumbnail], :size => "70x70"), a[:slideshow], :class => "sidebar_thumb", :title => a[:title]
  %span#test
  %h1 Upcoming Events
  = link_to "View Calendar", calendar_path
  %br/
  - upcoming_events.each do |e|
    .event
      .title_wrapper
        .title
          = link_to e.title, events_show_path(e)
        .calendar
          %a{:href => "#"}
            = image_tag "sky/calendar.png", :title => "Add to Google Calendar", :alt => "Add to Google Calendar"
      .location
        = e.location
      .time
        = e.event_start.strftime("%m/%d, %l:%M %p")
        = e.event_end.strftime("- %l:%M %p")
      .description
        = e.description.slice(0..100) + "..."
      - if current_user
        .option
          = link_to "Edit", events_edit_path(e)
        .option
          = link_to "Delete", events_destroy_path(e), :method => "delete"
        .option
          = link_to "Sign up", events_signups_new_path(e)
