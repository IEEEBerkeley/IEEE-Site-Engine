%h1#hope_title Hands On Practical Electronics
%div#hope_nav
  - %w(about programs resources faq).each do |name|
    = link_to name.upcase, "http://ieee.berkeley.edu/hope/#{name}/", {:id => "hope_#{name}", :class => "hope_nav_link"} 

%div#hope_content
  %h2 Resources
  = link_to "Syllabus", "/hope/materials/Syllabus.pdf"
  - 3.times do
    %br
  %div.hope_downloads#lessons
    - (1..10).each do |i|
      = link_to "Lesson#{'%02d'%i}", "/hope/materials/Lesson#{'%02d'%i}.ppt" 
      %br
      %br
    = link_to "Inductor Lesson", "/hope/materials/Lesson_inductor.ppt"
  %div.hope_downloads#handouts
    - (1..10).each do |i|
      = link_to "Handout#{'%02d'%i}", "/hope/materials/Handout#{'%02d'%i}.pdf"
      %br
      %br	  
  %div.hope_downloads#labs
    - (1..9).each do |i|
      = link_to "Lab0#{i}", "/hope/materials/Lab0#{i}.pdf"
      %br
      %br	  
    = link_to "Lab10", "/hope/materials/Lab10.ppt"  
