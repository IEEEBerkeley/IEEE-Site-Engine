.event_title= @e.title
.event_location
  = @e.location
.event_description
  = @e.description
.event_time
  %b= @e.event_start.strftime("Start: %a %d %b - %I:%M %p")
  %br/
  %b= @e.event_end.strftime("End: %a %d %b - %I:%M %p")
- if Signup.where(:event_id => @e.id).length > 0
  %h4 Attending
  - if has_permission
    %p
      You can click the email addresses to change the "attended" flag
- if Signup.exists?
  - @e.users.each do |u|
    %p
      - s = u.signups.where(:event_id => @e.id).first
      - if has_permission
        = link_to u.email, user_signup_mark_path(u, s.id), :method => "post"
        \- Attended: #{s.attended}
      - else
        = link_to u.email, user_signup_mark_path(u, s.id), :method => "post"
        \- Attended: #{s.attended}
- if current_user
  = link_to 'Edit', edit_event_path
= link_to 'Back', :back
