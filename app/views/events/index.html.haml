%h1 All Events
- events = all_events
- if events
  - events.each do |e|
    .event
      %h2= link_to e.title, event_path(e)
      .location
        = e.location
      .time
        = e.event_start.strftime("%m/%d, %l:%M %p")
        = e.event_end.strftime("- %l:%M %p")
      .description
        = e.description
  = will_paginate events, :class => "post_pagination"
.option
  - if current_user
    = link_to 'Create New Event', new_event_path

.option
  = link_to "View Calendar", calendar_path
